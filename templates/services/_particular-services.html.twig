<h2 class="text-center particular mb-5" id="particular">Aux particuliers</h2>
<div class="d-flex flex-column mb-5">
	<div class="img-services-div mb-5 d-flex justify-content-center">
		<img src="{{ asset('build/images/services-particular.jpg') }}" class="img-services img-fluid" alt="services pour particuliers">
	</div>
	<div class="row d-flex justify-content-around mt-5">
		{% for category in categories|filter(category => category.type == 'Candidat') %}
			<div class="col-11 col-lg-5 mt-0">
				<div class="card service-card my-5">
					<div class="card-header text-center fw-bold py-3 service-head text-light">
						{{ category.title }}
					</div>
					<div class="card-body service-body body-particular py-md-3 px-md-4 p-lg-4">
						<ul class="list-unstyled accordion accordion-flush" id="accordionServices{{ category.id }}">
							{% for service in category.services %}
								<li class="accordion-item">
									<div class="accordion-header" id="heading{{ service.id }}">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ service.id }}" aria-expanded="false" aria-controls="collapse{{ service.id }}">
											<i class="serviceIcon bi bi-arrow-right-circle-fill me-3 text-secondary"></i>
											{{ service.title }}
										</button>
									</div>
									<div id="collapse{{ service.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ service.id }}" data-bs-parent="#accordionServices{{ category.id }}">
										<div class="accordion-body">
											{{ service.description }}
										</div>
									</div>
								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>
