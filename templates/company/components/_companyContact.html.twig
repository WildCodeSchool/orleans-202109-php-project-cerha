<div class="row companyContact mt-5 d-lg-block d-flex justify-content-center" id="companyContact">
	<div class="card p-4 col-lg-6 col-10 offset-lg-3">
		{% if is_granted("ROLE_ADMIN") == false %}
			<a class="btn btn-outline-light ms-5 align-self-end fs-5  bi bi-pencil-square" href="{{ path('company_editContact') }}">
				Modifier</a>
		{% endif %}
		<h2 class="card-title text-secondary text-center mt-3 pt-2 px-4">Contact</h2>
		<ul class="list-unstyled mt-3">
			<li>
				<i class="bi bi-person-circle mx-3"></i>
				{{ company.user.gender }}
				{{ company.user.firstname }}
				{{ company.user.lastname }}
			</li>
			<li>
				<i class="bi bi-briefcase mx-3"></i>
				{{ company.contactRole }}
			</li>
			<li>
				<i class="bi bi-envelope  mx-3 "></i>
				{{ company.user.email }}
			</li>
			<li>
				<i class="bi bi-telephone  mx-3 "></i>
				{{ company.user.phoneNumber }}
			</li>
		</ul>
	</div>
</div>
