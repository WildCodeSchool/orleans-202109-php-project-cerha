{% extends 'base.html.twig' %}

{% block title %}Candidate{% endblock %}

{% block body %}
    <h1>Candidate</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidate.id }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ candidate.birthDate ? candidate.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ candidate.address }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ candidate.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ candidate.city }}</td>
            </tr>
            <tr>
                <th>TimeSearch</th>
                <td>{{ candidate.timeSearch }}</td>
            </tr>
            <tr>
                <th>SearchQuality</th>
                <td>{{ candidate.searchQuality }}</td>
            </tr>
            <tr>
                <th>ProfilQuality</th>
                <td>{{ candidate.profilQuality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_candidate_index') }}">back to list</a>

    <a href="{{ path('admin_candidate_edit', {'id': candidate.id}) }}">edit</a>

    {{ include('admin_candidate/_delete_form.html.twig') }}
