<form method="post" action="{{ path('admin_candidate_delete', {'id': candidate.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidate.id) }}">
    <button class="btn btn-danger px-3 py-1"><i class="bi bi-trash"></i></button>
</form>
