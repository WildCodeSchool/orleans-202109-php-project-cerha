{% extends 'base-admin.html.twig' %}

{% block title %}Employee
{% endblock %}

{% block body %}
	<div class="container m-5">
		<h1>Employee</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ employee.id }}</td>
				</tr>
				<tr>
					<th>Picture</th>
					<td>{{ employee.picture }}</td>
				</tr>
				<tr>
					<th>Role</th>
					<td>{{ employee.role }}</td>
				</tr>
				<tr>
					<th>Civility</th>
					<td>{{ employee.civility }}</td>
				</tr>
				<tr>
					<th>Firstname</th>
					<td>{{ employee.firstname }}</td>
				</tr>
				<tr>
					<th>Lastname</th>
					<td>{{ employee.lastname }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_employee_index') }}">back to list</a>

		<a href="{{ path('admin_employee_edit', {'id': employee.id}) }}">edit</a>

		{{ include('admin_employee/_delete_form.html.twig') }}
	</div>
