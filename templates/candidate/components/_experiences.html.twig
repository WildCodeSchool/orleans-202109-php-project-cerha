<div class="row candidateExperiences mt-5 d-lg-block d-flex justify-content-center" id="candidateExperiences">
	<div class="card card-candidateExperiences p-4 col-lg-6 col-10 offset-lg-3">
		<div class="d-flex mt-2 justify-content-between">
			<h2 class="card-title text-primary ms-3 pt-1">Expériences</h2>
			{% if is_granted("ROLE_ADMIN") == false %}
				<a class="btn fs-6 bi bi-pencil-square pt-2" href="{{ path('candidate_edit_experience', {'user': candidate.user}) }}">
					Modifier</a>
			{% endif %}
		</div>
		<div class=" mt-3">
			{% for experience in candidate.experiences %}
				<h4 class="text-secondary mx-3">
					<i class="bi bi-briefcase text-secondary"></i>
					{{ experience.contrat.name }}
					-
					{{ experience.jobName }}</h4>
				<p class="text-muted mx-3">
					{{ experience.place }}
					|
					{{ experience.startDate|date('F Y') }}
					-
					{{ experience.endDate|date('F Y') }}
				</p>
				<div class="mx-3 my-4 lh-base">
					<p>{{ experience.description }}</p>
				</div>
				<div class="mx-3 d-flex text-muted ">
					<span class="fs-5 pb-5 text-dark">Référent</span>
					<div>
						<i class="bi bi-person text-muted ms-3"></i>
						{{ experience.referentName }}
						<i class="bi  bi-telephone text-muted ms-3 mb-3"></i>
						{{ experience.phoneReferent }}
					</div>
				</div>

			{% else %}
				<p class="mx-3">Aucune information disponible.</p>
			{% endfor %}
		</div>
	</div>
</div>
