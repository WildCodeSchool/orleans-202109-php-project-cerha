<div class="row softskills mt-5">
	<div class="card card-softskills p-4 col-md-6 offset-md-3">
		<a class="btn btn-outline-light ms-5 align-self-end fs-5  bi bi-pencil-square" href=" {{ path('candidat_edit_formation', {'user': candidat.user}) }}">
			Modifier</a>
		<h2 class="card-title text-primary text-center mt-3 pt-2 px-4">
			<i class="bi  bi-book text-primary"></i>
			Formations
		</h2>

		<div class=" mt-3">

			{% for formation in candidat.formations %}
				<h4 class="text-secondary mx-3">

					{{ formation.level.level }}
					-
					{{ formation.title }}</h4>
				<p class="text-primary mx-3">
					{{ formation.place }}
					|
					{{ formation.startDate|date('F Y') }}
					-
					{{ formation.endDate|date('F Y') }}
				</p>


				<p class="mx-3 lh-base mb-4">
					{{ formation.description }}</p>

				<div class="border border-gray text-dark  ">

					<div class="d-flex justify-content-around">
						<div>
							<i class="bi bi-arrow-right-circle-fill text-dark"></i>
							Contact
						</div>

						<div>
							<i class="bi bi-person-plus-fill text-dark"></i>
							{{ formation.referent }}
						</div>
						<div>
							<i class="bi bi-telephone-forward-fill text-dark"></i>
							{{ formation.phoneReferent }}
						</div>
					</div>
				</div>
			{% else %}

				Aucune information disponible.
			{% endfor %}

		</div>
	</div>
</div>
