<div class="row softskills mt-5">
	<div class="card card-softskills p-4 col-md-6 offset-md-3">
		<h2 class="card-title text-primary text-center mt-3 pt-2 px-4">Formations</h2>
		<div class=" mt-3">

			{% for formation in candidat.formations %}
				<h2 class="text-secondary ">
					<svg class="mx-3" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#e8a006" class="bi bi-arrow-right-circle-fill" viewbox="0 0 16 16">
						<path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
					</svg>
					{{ formation.title }}</h2>
				<h3 class="text-primary ">
					{{ formation.place }}
				</h3>

				<div>
					{{ formation.startDate|date('F Y') }}
					-
					{{ formation.endDate|date('F Y') }}
				</div>
				<div>
					{{ formation.description }}</div>

				<div class=" mb-5">
					<span class="text-primary">Référent:</span>
					{{ formation.referent }}</div>
			{% else %}

				Aucune information disponible.
			{% endfor %}

		</div>
		<a class="btn btn-secondary fw-bold text-light align-self-center mb-4 " href="">Modifier</a>
	</div>
</div>
