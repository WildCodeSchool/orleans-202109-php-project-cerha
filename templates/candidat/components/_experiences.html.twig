<div class="row softskills mt-5" id="candidateExperiences">
	<div class="card card-softskills p-4 col-md-6 offset-md-3">
		<a class="btn btn-outline-light ms-5 align-self-end fs-5  bi bi-pencil-square" href=" {{ path('candidat_edit_experience', {'user': candidat.user}) }} ">
			Modifier</a>
		<h2 class="card-title text-primary text-center mt-3 pt-2 px-4">
			Expériences</h2>
		<div class=" mt-3">
			{% for experience in candidat.experiences %}
				<h4 class="text-secondary mx-3">
					<i class="bi bi-briefcase text-secondary"></i>
					{{ experience.contrat.name }}
					-
					{{ experience.jobName }}</h4>
				<p class="text-muted mx-3">
					{{ experience.place }}
					|
					{{ experience.startDate|date('F Y') }}
					-
					{{ experience.endDate|date('F Y') }}
				</p>
				<div class="mx-3 my-4 lh-base">
					<p>{{ experience.description }}</p>
				</div>
				<div class="mx-3 d-flex text-muted ">
					<span class="fs-5 text-dark">Référent</span>
					<div>
						<div>
							<i class="bi bi-person-check text-muted ms-3"></i>
							{{ experience.referentName }}
							<i class="bi  bi-telephone-forward text-muted ms-3"></i>
							{{ experience.phoneReferent }}
						</div>
					</div>
				</div>
			{% else %}
				Aucune information disponible.
			{% endfor %}
		</div>
	</div>
</div>
