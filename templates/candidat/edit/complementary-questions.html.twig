{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Mes questions
{% endblock %}

{% block body %}
	<main class="container">
		<h1 class="text-center mt-5 ">
			Mes questions complémentaires<h1>
				<div class="col-md-6 et offset-md-3 fs-4 my-5">
					{{ form_start(form) }}
					<h3 class="fs-4">Depuis combien de temps êtes-vous en recherche active ?</h3>
					{{ form_row(form.timeSearch) }}
					<h3 class="fs-4">Vous qualifierez votre recherche : d' efficace, pas assez ciblée, vous ne savez pas par où commencer :</h3>
					{{ form_row(form.searchQuality) }}
					<h3 class="fs-4">Vous qualifierez votre profil : d' attractif, de rare, d' atypique, commun :</h3>
					{{ form_row(form.profilQuality) }}
					<button class="btn btn-secondary fw-bold text-light align-self-center mb-4">Valider</button>
					<a class="btn btn-outline-dark align-self-center mb-4" href=" {{ path('candidat_show', {'user': candidat.user}) }}">Retour</a>
					{{ form_end(form) }}
				</div>
			</main>
		{% endblock %}
